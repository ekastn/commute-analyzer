# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy package files
COPY web/package.json web/pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source
COPY web .

# Build for production
# Pass API URL if needed at build time. 
# Default to /api/v1 so it works with the Nginx reverse proxy by default.
ARG VITE_API_URL=/api/v1
ENV VITE_API_URL=$VITE_API_URL
RUN pnpm build

# Stage 2: Serve with Nginx
FROM nginx:alpine

# Copy built assets
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy Nginx template for envsubst
COPY web/default.conf.template /etc/nginx/templates/default.conf.template

# Default backend URL (can be overridden at runtime)
ENV BACKEND_URL=http://api:8080

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
